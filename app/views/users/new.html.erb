              </div>
            </div>
            <div class="controls signupz">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-envelope"></i></span>
                <%= f.text_field :email,:placeholder=>"Work Email (xxx@xxx.com)",:id=>"workemail",:type=>"email" %>
