              </div>
            </div>
            <br>
            <div class="controls signupz" style="margin-bottom:20px;">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                <%= f.password_field :password ,:id=>"pwd",:placeholder=>"Password" %>
